{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "noEmit": true,
    "allowImportingTsExtensions": true
  },
  "include": ["src/**/*", "types/**/*"]
}
